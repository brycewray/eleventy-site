{
  "name": "eleventy_site",
  "description": "The repository for brycewray.com, a website built on the Eleventy (https://11ty.dev) static site generator. Built off the Git history of the earlier `eleventy_solo` repo.",
  "private": true,
  "scripts": {
    "clean": "rimraf _site",
    "hasher": "node csshash.js && node jshash.js",
    "devsass": "sass --no-source-map src/assets/scss/index.scss _site/css/index.css",
    "prodsass": "sass --no-source-map src/assets/scss/index.scss _site/css/$(cat csshash)",
    "devpostcss": "postcss _site/css/index.css -o _site/css/index.css",
    "prodpostcss": "postcss _site/css/$(cat csshash) -o _site/css/$(cat csshash)",
    "start": "NODE_ENV=development npm-run-all clean devsass --parallel dev:*",
    "build": "NODE_ENV=production npm-run-all clean hasher prod:sass prod:postcss prod:eleventy",
    "dev:sass": "npm run devsass -- --watch",
    "dev:postcss": "npm run devpostcss --watch",
    "dev:eleventy": "ELEVENTY_ENV=development npx @11ty/eleventy --incremental --quiet --serve",
    "prod:sass": "npm run prodsass",
    "prod:postcss": "npm run prodpostcss",
    "prod:eleventy": "ELEVENTY_ENV=production npx @11ty/eleventy --output=./_site",
    "testbuild:bsync": "browser-sync start --server ./_site -w --no-open --no-notify --no-ghost-mode --port 3000 --ui-port 3001",
    "testbuild": "NODE_ENV=production npm run build && npm run testbuild:bsync"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "browserslist": [
    "last 4 versions",
    "> 1%",
    "maintained node versions"
  ],
  "devDependencies": {
    "@11ty/eleventy": "^0.12.1",
    "@11ty/eleventy-img": "^1.0.0-beta.0",
    "@11ty/eleventy-plugin-rss": "^1.1.1",
    "autoprefixer": "^10.3.6",
    "cross-env": "^7.0.3",
    "eleventy-plugin-error-overlay": "^0.1.2",
    "eleventy-plugin-svg-contents": "^0.7.0",
    "eleventy-rss-helper": "^1.2.1",
    "fast-glob": "^3.2.7",
    "glob": "^7.2.0",
    "html-minifier": "^4.0.0",
    "luxon": "^2.0.2",
    "markdown-it": "^12.2.0",
    "markdown-it-anchor": "^8.3.1",
    "markdown-it-attrs": "^4.1.0",
    "markdown-it-bracketed-spans": "^1.0.1",
    "markdown-it-footnote": "^3.0.3",
    "markdown-it-link-attributes": "^3.0.0",
    "markdown-it-prism": "^2.2.1",
    "md5": "^2.3.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.8",
    "postcss-cli": "^9.0.1",
    "postcss-csso": "^5.0.1",
    "postcss-import": "^14.0.2",
    "rimraf": "^3.0.2",
    "rss": "^1.2.2",
    "sass": "^1.42.1"
  }
}
