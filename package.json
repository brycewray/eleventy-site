{
  "name": "eleventy_site",
  "description": "The repository for www.brycewray.com, a website built on the Eleventy (https://11ty.dev) static site generator. Built off the Git history of the earlier `eleventy_solo` repo.",
  "private": true,
  "scripts": {
    "cleanDev": "rimraf '_site/!(images)'",
    "cleanProd": "rimraf _site",
    "hasher": "node csshash.js",
    "pagefind": "pagefind --source _site",
    "start": "TAILWIND_MODE=watch NODE_ENV=development npm-run-all cleanDev --parallel dev:*",
    "build": "NODE_ENV=production npm-run-all cleanProd hasher --parallel prod:*",
    "dev:twcss": "tailwindcss --postcss -i src/assets/css/critical.css -o _site/css/critical.css --watch",
    "dev:eleventy": "ELEVENTY_ENV=development npx @11ty/eleventy --serve --incremental",
    "prod:twcss": "tailwindcss --postcss -i src/assets/css/critical.css -o _site/css/$(cat hash-css) --minify",
    "prod:eleventy": "ELEVENTY_ENV=production npx @11ty/eleventy --output=./_site",
    "testbuild": "npm run build && ELEVENTY_ENV=production npx @11ty/eleventy --output=./_site --serve"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@11ty/eleventy": "^2.0.0-beta.1",
    "@11ty/eleventy-fetch": "^3.0.0",
    "@11ty/eleventy-img": "^2.0.1",
    "@11ty/eleventy-plugin-rss": "^1.2.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "^4.2.0",
    "@11ty/eleventy-upgrade-help": "^2.0.3",
    "axios": "^1.2.3",
    "clean-css": "^5.3.2",
    "cross-env": "^7.0.3",
    "cross-spawn": "^7.0.3",
    "date-fns": "^2.29.3",
    "dotenv": "^16.0.3",
    "eleventy-plugin-svg-contents": "^0.7.0",
    "eleventy-rss-helper": "^1.2.1",
    "fast-glob": "^3.2.12",
    "glob": "^8.1.0",
    "html-minifier": "^4.0.0",
    "luxon": "^3.2.1",
    "markdown-it": "^13.0.1",
    "markdown-it-anchor": "^8.6.6",
    "markdown-it-attrs": "^4.1.6",
    "markdown-it-bracketed-spans": "^1.0.1",
    "markdown-it-footnote": "^3.0.3",
    "markdown-it-link-attributes": "^4.0.1",
    "markdown-it-prism": "^2.3.0",
    "md5": "^2.3.0",
    "node-fetch": "^3.3.0",
    "npm-run-all": "^4.1.5",
    "pagefind": "^0.10.6",
    "postcss": "^8.4.21",
    "postcss-cli": "^10.1.0",
    "postcss-import": "^15.1.0",
    "rimraf": "^4.1.1",
    "rss": "^1.2.2",
    "tailwind-fluid-typography": "^1.3.0",
    "tailwindcss": "^3.2.4",
    "tailwindcss-logical": "^3.0.0"
  }
}
