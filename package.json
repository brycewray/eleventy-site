{
  "name": "eleventy_site",
  "description": "The history of eleventy_solo and the Vite-ness of eleventy_vite, the latter of which was based on eleventy-on-vite by Fotis Papadogeorgopoulos.",
  "private": true,
  "scripts": {
    "clean": "rimraf _site",
    "hasher": "node csshash.js && node jshash.js",
    "start": "TAILWIND_MODE=watch NODE_ENV=development npm-run-all clean --parallel dev:*",
    "dev:twcss": "tailwindcss --postcss -i src/assets/css/index.css -o _site/css/index.css --watch --minify",
    "dev:eleventy": "ELEVENTY_ENV=development npx @11ty/eleventy --incremental --quiet --serve",
    "build": "NODE_ENV=production npm-run-all clean hasher --parallel prod:*",
    "prod:twcss": "tailwindcss --postcss -i src/assets/css/index.css -o _site/css/$(cat csshash) --minify",
    "prod:eleventy": "ELEVENTY_ENV=production npx @11ty/eleventy --output=./_site",
    "testbuild:bsync": "browser-sync start --server ./_site -w --no-open --no-notify --no-ghost-mode --port 3000 --ui-port 3001",
    "testbuild": "NODE_ENV=production npm run build && npm run testbuild:bsync"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "browserslist": [
    "last 4 versions",
    "> 1%",
    "maintained node versions"
  ],
  "devDependencies": {
    "@11ty/eleventy": "^0.12.1",
    "@11ty/eleventy-img": "^1.0.0-beta.0",
    "@11ty/eleventy-plugin-rss": "^1.1.1",
    "cross-env": "^7.0.3",
    "eleventy-plugin-error-overlay": "^0.1.2",
    "eleventy-plugin-svg-contents": "^0.7.0",
    "eleventy-rss-helper": "^1.2.1",
    "glob": "^7.1.7",
    "glob-all": "^3.2.1",
    "html-minifier": "^4.0.0",
    "luxon": "^2.0.2",
    "markdown-it": "^12.2.0",
    "markdown-it-anchor": "^8.3.0",
    "markdown-it-attrs": "^4.0.0",
    "markdown-it-bracketed-spans": "^1.0.1",
    "markdown-it-footnote": "^3.0.3",
    "markdown-it-link-attributes": "^3.0.0",
    "markdown-it-prism": "^2.2.0",
    "md5": "^2.3.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.6",
    "postcss-cli": "^8.3.1",
    "postcss-import": "^14.0.2",
    "rimraf": "^3.0.2",
    "rss": "^1.2.2",
    "sass": "^1.39.2",
    "tailwindcss": "^2.2.15",
    "tailwindcss-logical": "^2.0.0"
  }
}
