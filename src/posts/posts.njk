---
layout: base
tags:
  - nav
navtitle: Posts
title: Posts
description: Posts for this website
eleventyExcludeFromCollections: true
pagination:
  data: collections.post
  size: 5
  reverse: true
  alias: posts
permalink: "posts/{% if pagination.pageNumber != 0 %}page/{{ pagination.pageNumber + 1 }}/{% endif %}"
# above permalink fixes Eleventy issue #2161 **and** conforms to how Hugo repo paginates
eleventyImport:
	collections: ["post"]
---

  <main>
    <div class="text-center px-10 w-full mx-auto" data-pagefind-ignore>
      <h1 class="pt-16 lg:pt-20 fluid-4xl !tracking-tight">Posts</h1>
      <div class="my-0 mx-auto w-[85%] lg:w-3/4 2xl:w-[62.5%]">
				{% include "layouts/partials/pagerthing.njk" %}
				<hr class="border-1 border-y-black dark:border-y-white mt-2 mb-6" />
        {% for post in posts %}
          <div>
            <h2 class="fluid-xl !leading-tight !tracking-tight lg:text-[2rem] 2xl:text-4xl mb-2"><a href="{{ post.url }}">{{ post.data.title | safe }}</a></h2>
						{% set dashDescription = post.data.description | replace(" — ", "—") %}
            <p class="fluid-lg font-light !tracking-tight mt-2 mb-1">
              {{ dashDescription | safe }}
            </p>
            <p class="fluid-base !tracking-normal mt-0 mb-6">{% if not 'The site this week' in post.data.title %}<strong><time datetime="{{ post.date | dateStringISO }}">{{ post.date | dateStringISO }}</time></strong>{% endif %}
            </p>
          </div>
        {% endfor %}
        <hr class="border-1 border-y-black dark:border-y-white mt-6 mb-2" />
				{% include "layouts/partials/pagerthing.njk" %}
      </div>
    </div>
  </main>
