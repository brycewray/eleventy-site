{%- set eleventyEnv = projEnv.environment -%}
{%- set siteHost = siteparams.siteHost -%}
<!DOCTYPE html>
<html class="scroll-p-[80px]" lang="en" charset="utf-8">
  {%- include 'layouts/partials/head.njk' -%}
  <body class="bg-blue-100 dark:bg-black text-black dark:text-gray-100 font-sans font-normal">
    {%- include 'layouts/partials/header.njk' -%}
    {{ content | safe }}
    {%- if title != "Search the site" -%}
			{%- include 'layouts/partials/search-pagefind.njk' -%}
		{%- endif %}
		{%- include 'layouts/partials/footer.njk' -%}
    {%- if eleventyEnv == "production" -%}
      {%- if siteHost == "CFP" -%}
        <!-- Cloudflare Web Analytics -->
        <script defer src='https://static.cloudflareinsights.com/beacon.min.js' data-cf-beacon='{"token": "36afbbd88c1b4b608a61683f9555fd48"}'>
        </script>
        <!-- End Cloudflare Web Analytics -->
      {%- endif %}
    {%- endif -%}
		{%- if '<pre class="language' in content -%}
			<script nonce="DhcnhD3khTMePgXw" src="/assets/js/copy-code-button.js" defer></script>
		{%- endif %}
  </body>
</html>
