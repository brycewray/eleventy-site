{% set cssEnv = siteparams.cssEnv %}{# won't be needed in Eleventy 1.x #}
{% if cssEnv == "TWCSS" %}
  <div class="font-sans container h-auto w-full min-w-full relative overflow-hidden pt-6 md:pt-12 px-4 md:px-8 2xl:px-12">
    <h1 class="text-center text-4xl md:text-5xl lg:text-6xl 2xl:text-7xl tracking-tight leading-tight mt-2 mb-4 md:mt-6 md:mb-6 2xl:mt-16">{{ title | safe }}</h1>
    {% if subtitle %}<h2 class="text-center text-2xl md:text-3xl lg:text-4xl 2xl:text-5xl mb-4 md:mb-6 2xl:mb-6 leading-tight tracking-tight">{{ subtitle | safe }}</h2>{% endif %}
    {% if description %}<p class="text-center md:block md:text-2xl 2xl:text-3xl tracking-tight mt-2 md:mt-6 mb-0 md:mb-4 2xl:mb-8">{{ description | safe }}</p>{% endif %}
    <p class="text-center text-base lg:text-lg 2xl:text-xl px-4 md:px-0 mt-8 mb-0 md:mt-0">
      <strong>{{ page.date | htmlDateString }}</strong>{% if lastmod %}<br /><span class="text-sm">Last modified {{ lastmod | htmlDateString }}</span>{% endif %}
    </p>
  </div>
{% else %}{# fall back to SCSS #}
  <div class="billboard-div">
    <div class="billboard-title-block">
      <h1 class="billboard-title-text">{{ title | safe }}</h1>
      {% if subtitle %}
      <h2 class="billboard-subtitle-text">{{ subtitle | safe }}</h2>
      {% else %}
      <p>&nbsp;</p>
      {% endif %}
      {% if description %}
      <p class="billboard-description-text">{{ description | safe }}</p>
      {% else %}
      <p>&nbsp;</p>
      {% endif %}
      <p class="billboard-p-text">
        <strong>{{ page.date | htmlDateString }}</strong><br />{% if lastmod %}<span class="seventyFive">Last modified {{ lastmod | htmlDateString }}</span>{% else %}&nbsp;{% endif %}
      </p>
    </div>
  </div>
{% endif %}
