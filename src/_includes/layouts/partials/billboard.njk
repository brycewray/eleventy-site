		<div class="billboard-div">
      <div class="billboard-title-block">
        <h1 class="billboard-title-text">{{ title | safe }}</h1>
        {% if description %}
        <p class="billboard-description-text"><em>{{ description | safe }}</em></p>
        {% else %}
        <p>&nbsp;</p>
        {% endif %}
				{% if not (title == siteparams.searchPageTitle) %}
        <p class="billboard-p-text" data-pagefind-ignore>
          {% if not ('The site this week' in title) %}<strong>{{ page.date | dateStringISO }}</strong>{% endif %}
        </p>
				{% endif %}
      </div>
    </div>
