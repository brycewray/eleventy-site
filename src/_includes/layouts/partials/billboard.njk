		<div class="billboard-div">
      <div class="billboard-title-block">
        <h1 class="billboard-title-text">{{ title | safe }}</h1>
        {% if description %}
        <p class="billboard-description-text">{{ description | safe }}</p>
        {% else %}
        <p>&nbsp;</p>
        {% endif %}
				{% if (not (title == siteparams.searchPageTitle)) and (not (title == "Want to reach me?")) and (not ('The site this week' in title)) %}
				<p class="billboard-p-text" data-pagefind-ignore>
          <strong>{{ page.date | dateStringISO }}</strong>
        </p>
				<p class="ctr legal" data-pagefind-ignore>
					{% gitinfo page.date, page.inputPath %}
				</p>
				{% endif %}
      </div>
    </div>
