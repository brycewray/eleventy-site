		<div class="billboard-div">
      <div class="billboard-title-block">
        <h1 class="billboard-title-text">{{ title | safe }}</h1>
        {% if description %}
        <p class="billboard-description-text"><em>{{ description | safe }}</em></p>
        {% else %}
        <p>&nbsp;</p>
        {% endif %}
				{% if not (title == data.siteparams.searchPageTitle) %}
        <p class="billboard-p-text" data-pagefind-ignore>
          {% if not ('The site this week' in title) %}<strong>{{ page.date | dateStringISO }}</strong><br />{% endif %}<span class="seventyFive">{% if lastmod and not ((page.date | dateStringISO) == (lastmod | dateStringISO)) %}Last modified {{ lastmod | dateStringISO }}{% else %}&nbsp;{% endif %}</span>
        </p>
				{% endif %}
      </div>
    </div>
