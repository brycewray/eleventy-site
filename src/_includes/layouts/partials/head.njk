{% set cloudiBase = "https://res.cloudinary.com/brycewray-com/image/upload/" %}
{% set xFmPart1 = "c_fill,w_1024,h_512," %}
{% set xFmPart2 = "q_auto,f_auto,x_0,z_1/" %}
{% set fallbackImg = "typewriter-monochrome_2242164_6260x4374.jpg" %}
{% set eleventyVersion = pkg.devDependencies['@11ty/eleventy'] | replace("^", "") %}

  <head>
    <meta http-equiv="X-UA-Compatible" content="IE=10"><!-- due to IE 11 issue with TWCSS -->
    <meta name="generator" content="Eleventy v{{ eleventyVersion }}" />
        
    {% if title == "Home page" %}
      <title>{{ siteparams.siteTitle }}</title>
      <meta property="og:title" content="{{ siteparams.siteTitle }}" />
    {% else %}
      <title>{{ title }} | {{ siteparams.siteTitle }}</title>
      <meta property="og:title" content="{{ title }} | {{ siteparams.siteTitle }}" />
    {% endif %}
    
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <meta property="og:image" content="{{ cloudiBase }}{{ xFmPart1 }}{{ xFmPart2 }}{% if featured_image %}{{ featured_image }}{% else %}{{ fallbackImg }}{% endif %}" />

    {% if title == "Home page" %}
      <meta name="description" content="{{ siteparams.siteDescription }}" />
      <meta property="og:description" content="{{ siteparams.siteDescription }}" />
      <meta property="og:url" content = "{{ siteparams.siteURLforOG }}/" />
      <link rel="canonical" href="{{ siteparams.siteURLforOG }}/" />
    {% else %}
      <meta name="description" content="{{ description }}" />
      <meta property="og:description" content="{{ description }}" />
      <meta property="og:url" content="https://brycewray.com{{ page.url }}" />
      <link rel="canonical" href="https://brycewray.com{{ page.url }}" />
    {% endif %}

    <!-- Twitter meta -->
    <meta name="twitter:site" content="@BryceWrayTX">
    <meta name="twitter:creator" content="@BryceWrayTX">
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:image" content="{{ cloudiBase }}{{ xFmPart1 }}{{ xFmPart2 }}{% if featured_image %}{{ featured_image }}{% else %}{{ fallbackImg }}{% endif %}" />
    {% if title != "Home page" %}
      <meta name="twitter:description" content="{{ description }}" />
      <meta name="twitter:title" content="{{ title }}" />
    {% else %}
      <meta name="twitter:description" content="{{ siteparams.siteDescription }}" />
      <meta name="twitter:title" content="{{ siteparams.siteTitle }}" />
    {% endif %}

    <!-- **** BEGINNING, favicons **** -->

    <!-- generics -->
    <link rel="icon" type="image/svg+xml" href="/assets/svg/svgNavIcon_reduced.svg" />
    <link rel="icon" type="image/png" href="/images/icons/favicon-16x16.png" sizes="16x16" />
    <link rel="icon" type="image/png" href="/images/icons/favicon-32x32.png" sizes="32x32" />

    <!-- iOS -->
    <link rel="apple-touch-icon" sizes="120x120" href="/images/icons/apple-icon-120x120.png" />
    <link rel="apple-touch-icon" sizes="152x152" href="/images/icons/apple-icon-152x152.png" />
    <link rel="apple-touch-icon" sizes="167x167" href="/images/icons/apple-touch-icon-167x167.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/images/icons/apple-icon-180x180.png" />
    <link rel="apple-touch-icon" sizes="1024x1024" href="/images/icons/apple-icon-1024x1024.png" />

    <!-- Android -->
    <link rel="shortcut icon" sizes="196x196" href="/images/icons/favicon-196x196.png" />

    <!-- Windows 8, IE 10 -->
    <meta name="msapplication-TileColor" content="#FFFFFF" />
    <meta name="msapplication-TileImage" content="/images/ms-icon-144x144.png" />

    <!-- Windows 8.1 and up, IE 11 -->
    <meta name="msapplication-config" content="/browserconfig.xml" />

    <!-- **** CONCLUSION, favicons **** -->

    <link rel="preconnect" href="https://res.cloudinary.com" />

    <link rel="preload" href="/css/{{ csshash['index.css'] }}" as="style" />
    <link rel="stylesheet" href="/css/{{ csshash['index.css'] }}" type="text/css" />
    <noscript><style>.lazy {display: none !important;}</style></noscript>

  </head>
