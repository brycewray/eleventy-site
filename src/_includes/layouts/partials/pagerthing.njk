					<div>
						{% if (pagination.href.first != page.url) and (pagination.href.first != pagination.href.previous) %}
							<a class="icon" aria-label="First page" href={{ pagination.href.first}}>
								{% include "layouts/partials/svgPrevPageIcon.njk" %}{% include "layouts/partials/svgPrevPageIcon.njk" %}
							</a>
						{% else %}
							{% include "layouts/partials/svgFirstPageIcon.njk" %}{% include "layouts/partials/svgFirstPageIcon.njk" %}
						{% endif %}
					</div>
					<div class="pagerSpacer"></div>
					{# Previous page. #}
					<div>
						{% if pagination.href.first != page.url %}
		          <a class="icon" aria-label="Previous page" href={{ pagination.href.previous }}>
								{% include "layouts/partials/svgPrevPageIcon.njk" %}
							</a>
						{% else %}
							{% include "layouts/partials/svgFirstPageIcon.njk" %}
						{% endif %}
					</div>
					<div class="pagerSpacer"></div>
