					{# Next page. #}
					<div>
						{% if pagination.href.last != page.url %}
							<a class="icon" aria-label="Next page" href={{ pagination.href.next }}>
								{% include "layouts/partials/svgNextPageIcon.njk" %}
							</a>
						{% else %}
							{% include "layouts/partials/svgLastPageIcon.njk" %}
						{% endif %}
					</div>
 					<div class="pagerSpacer"></div>
					{# Last page. #}
					<div>
						{% if (pagination.href.last != page.url) and (pagination.href.last != pagination.href.next ) %}
							<a class="icon" aria-label="Last page" href={{ pagination.href.last }}>
								{% include "layouts/partials/svgNextPageIcon.njk" %}{% include "layouts/partials/svgNextPageIcon.njk" %}
							</a>
						{% else %}
							{% include "layouts/partials/svgLastPageIcon.njk" %}{% include "layouts/partials/svgLastPageIcon.njk" %}
						{% endif %}
					</div>
				</div>
