          <li class="block py-2 my-0 mr-auto ml-6 lg:mt-0 lg:mb-1 lg:tracking-normal lg:leading-none"><a href="/" class="no-underline" aria-label="Home page">{{ '/src/assets/svg/svgNavIcon.svg' | svgContents | safe }}</a></li>
