---
title: contact.njk
layout: layouts/_default/base.njk
---
<main>
  <div class="container h-auto w-full min-w-full relative overflow-hidden gradient-titles pt-12 pb-6 px-4 md:px-16 xb:px-20">
    <h1 class="text-center text-4xl md:text-left md:text-5xl lg:text-6xl xb:text-8xl tracking-tight leading-tight mb-6 px-4 md:px-0 text-white">{{ title }}</h1>
    <h2 class="italic text-center text-2xl md:text-left md:text-3xl lg:text-5xl xb:text-6xl leading-tight tracking-tight px-6 md:px-0 text-white">
      {% if subtitle %}
        {{ subtitle }}
      {% else %}
        &nbsp;
      {% endif %}
    </h2>
    <p class="hidden not-italic md:block md:text-2xl xb:text-4xl tracking-tight md:mt-8 mb-6 text-white">{{ description }}</p>
    <p class="text-base xb:text-lg text-center px-4 md:text-right md:px-0 mt-4 md:mt-0 mb-0 text-white">
      <span style="font-variant: small-caps">published:</span>&nbsp; <strong>{{ page.date | htmlDateString }}</strong><br />
      <span class="text-sm xb:text-base">
        {% if lastmod %}
        <span style="font-variant: small-caps">last modified:</span>&nbsp;{{ lastmod | htmlDateString }}
        {% else %}
        &nbsp;
        {% endif %}
      </span>
    </p>
  </div>

  <div class="sm:w-5/6 md:w-4/5 xl:w-1/2 xb:w-5/12 mt-10 mr-auto ml-auto px-6 lg:px-16">
    <article>
      {{ content | safe }}
    </article>
  </div>

</main>