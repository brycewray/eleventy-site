---
title: singlepost
layout: base
---

<main>
  <div class="background-hero-image-div">
    <div class="background-hero-div">
      {%- imgc featured_image, featured_image_alt, featured_image_width, featured_image_height, "posts" -%}
    </div>
    <div class="background-hero-wrapper-div">
      <div class="background-hero-title-block">
        <h1 class="background-hero-title-text">{{ title }}</h1>
        <h2 class="background-hero-subtitle-text">
          {% if subtitle %}
            {{ subtitle | safe }}
          {% else %}
            &nbsp;
          {% endif %}
        </h2>
        <p class="background-hero-description-text">{{ description }}</p>
        <p class="background-hero-p-text">
          <strong class="text-lg md:text-xl 2xl:text-2xl">{{ page.date | htmlDateString }}</strong><br />
          <span class="pokey">
          {% if lastmod %}
          <span>Last modified</span> {{ lastmod | htmlDateString }}
          {% else %}
          &nbsp;
          {% endif %}
          </span>
        </p>
        <p class="featured-image-caption">
        {% if featured_image_caption %}
          {{ featured_image_caption | safe }}
        {% else %}
          &nbsp;
        {% endif %}
        </p>
      </div>
    </div>
  </div>

  <div class="container-narrower">
    <article class="article">
      {{ content | safe }}
      <div class="contactBtn">
        <button>
          <a href="mailto:bw@brycewray.com?subject=Re: “{{ title }}”">
            <svg aria-hidden="true" class="inline" role="img" height="2em" width="2em" viewBox="0 0 512 512" xmlns="http://www.w3.org/2000/svg"><path fill="currentColor" d="M464 64H48C21.49 64 0 85.49 0 112v288c0 26.51 21.49 48 48 48h416c26.51 0 48-21.49 48-48V112c0-26.51-21.49-48-48-48zm0 48v40.805c-22.422 18.259-58.168 46.651-134.587 106.49-16.841 13.247-50.201 45.072-73.413 44.701-23.208.375-56.579-31.459-73.413-44.701C106.18 199.465 70.425 171.067 48 152.805V112h416zM48 400V214.398c22.914 18.251 55.409 43.862 104.938 82.646 21.857 17.205 60.134 55.186 103.062 54.955 42.717.231 80.509-37.199 103.053-54.947 49.528-38.783 82.032-64.401 104.947-82.653V400H48z"></path></svg>&nbsp;&nbsp;<strong>Reply via email</strong>
          </a>
        </button>
      </div>
    </article>
  </div>

  {% if page.url != "/about/" %}
    <div class="bg-dark sansSerif">
      <h3 class="ctr wht prevnextH3"><a href="/posts" class="border-transparent text-blue-100 hover:text-blue-200 hover:border-blue-200">Other posts</a></h3>
    {% if nextPost.url %}
      <p class="ctr prevnextP">
        <strong>Next</strong>:
        <a class="next" href="{{ nextPost.url }}">{{ nextPost.data.title }}</a>
      </p>
    {% endif %}
    {% if prevPost.url %}
      <p class="ctr wht prevnextP">
        <strong>Previous</strong>:
        <a class="previous" href="{{ prevPost.url }}">{{ prevPost.data.title }}</a>
      </p>
    {% endif %}
    </div>
  {% endif %}
</main>
