---
title: singlepostherolqip.njk
layout: layouts/_default/baseof.njk
---

<main>
  <div class="background-hero-image-div">
    <img 
      src="/images/{{featured_image_base}}-20.{{featured_image_ext}}" 
      data-srcset="
      /images/{{featured_image_base}}-300.{{featured_image_ext}} 300w, 
      /images/{{featured_image_base}}-600.{{featured_image_ext}} 600w, 
      /images/{{featured_image_base}}-{{featured_image_width}}.{{featured_image_ext}}
      " 
      data-sizes="auto"
      class="lazyload blur-up"
      data-parent-fit="contain"
    />
  </div>
  <div class="background-hero-wrapper-div">
    <div class="background-hero-title-block">
      <h1 class="background-hero-title-text">{{ title }}</h1>
      <h2 class="background-hero-subtitle-text">
        {% if subtitle %}
          {{ subtitle }}
        {% else %}
          &nbsp;
        {% endif %}
      </h2>
      <p class="background-hero-description-text">{{ description }}</p>
      <p class="background-hero-p-text">
        <span style="font-variant: small-caps">published:</span>&nbsp; <strong>{{ page.date | htmlDateString }}</strong><br />
        <span class="pokey">
        {% if lastmod %}
        <span style="font-variant: small-caps">last modified:</span>&nbsp; {{ lastmod | htmlDateString }}
        {% else %}
        &nbsp;
        {% endif %}
        </span>
      </p>
    </div>
  </div>
  {% if featured_image_caption %}
    <p class="featured-image-caption">{{ featured_image_caption }}</p>
  {% endif %}

  <div class="post-line"></div> 

  <div class="container-narrower">
    <article class="article">
      {{ content | safe }}
    </article>
  </div>

  {% if title != "Home page" and title != "Posts" %}
  {% include 'webmentionlist.njk' %}
  {% endif %}

  {% if title != "The obligatory About Me page" %}
  <div class="bg-dark">
    <h3 class="ctr wht"><a href="/posts" style="border-bottom: 0;">Other posts</a></h3>
  {% if collections.post[idx] %}
    <p class="ctr">
      <strong>Next</strong>: 
      <a class="next" href={{ collections.post[idx].url }}>{{ collections.post[idx].data.title }}</a>
    </p>
  {% endif %}
  {% if collections.post[idx-2] %}
    <p class="ctr">
      <strong>Previous</strong>: 
      <a class="previous" href={{ collections.post[idx-2].url }}>{{ collections.post[idx-2].data.title }}</a>
    </p>
  {% endif %}
  </div>
  {% endif %}
