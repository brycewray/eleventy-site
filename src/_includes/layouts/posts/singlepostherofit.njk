---
title: singlepostherofit.njk
layout: layouts/_default/base.njk
---

<main>
  <div class="background-hero-image-div">
    <div class="h-full gradient-titles" style="background-position: center; background-repeat: no-repeat; background-size: cover;">
      <img 
        class='imgCover hero' 
        src='https://res.cloudinary.com/brycewray-com/image/upload/f_auto,q_auto:eco,w_600,x_0,z_1/{{ featured_image }}' 
        srcset='
        {% if featured_image_width >= 300 %}https://res.cloudinary.com/brycewray-com/image/upload/f_auto,q_auto:eco,w_300,x_0,z_1/{{ featured_image }} 300w{% endif %}{% if featured_image_width >= 450 %}, 
        https://res.cloudinary.com/brycewray-com/image/upload/f_auto,q_auto:eco,w_450,x_0,z_1/{{ featured_image }} 450w{% endif %}{% if featured_image_width >= 600 %}, 
        https://res.cloudinary.com/brycewray-com/image/upload/f_auto,q_auto:eco,w_600,x_0,z_1/{{ featured_image }} 600w{% endif %}{% if featured_image_width >= 750 %}, 
        https://res.cloudinary.com/brycewray-com/image/upload/f_auto,q_auto:eco,w_750,x_0,z_1/{{ featured_image }} 750w{% endif %}{% if featured_image_width >= 900 %}, 
        https://res.cloudinary.com/brycewray-com/image/upload/f_auto,q_auto:eco,w_900,x_0,z_1/{{ featured_image }} 900w{% endif %}{% if featured_image_width >= 1050 %}, 
        https://res.cloudinary.com/brycewray-com/image/upload/f_auto,q_auto:eco,w_1050,x_0,z_1/{{ featured_image }} 1050w{% endif %}{% if featured_image_width >= 1200 %}, 
        https://res.cloudinary.com/brycewray-com/image/upload/f_auto,q_auto:eco,w_1200,x_0,z_1/{{ featured_image }} 1200w{% endif %}{% if featured_image_width >= 1350 %}, 
        https://res.cloudinary.com/brycewray-com/image/upload/f_auto,q_auto:eco,w_1350,x_0,z_1/{{ featured_image }} 1350w{% endif %}{% if featured_image_width >= 1500 %}, 
        https://res.cloudinary.com/brycewray-com/image/upload/f_auto,q_auto:eco,w_1500,x_0,z_1/{{ featured_image }} 1500w{% endif %}
        ' 
        alt={{ featured_image_alt }} 
        width={{ featured_image_width }} 
        height={{ featured_image_height }} 
        sizes="100vw"
      />
      <noscript>
        <img
          class="imgCover" 
          src="https://res.cloudinary.com/brycewray-com/image/upload/f_auto,q_auto:eco,w_300,x_0,z_1/{{ featured_image }}" 
          alt="{{ featured_image_alt }}" 
        />
      </noscript>
    </div>
    <div class="background-hero-title-block-fit">
      <div class="background-hero-title-text">
        <h1 class="text-center text-4xl md:text-left md:text-5xl lg:text-7xl xb:text-8xl tracking-tight leading-tight mb-6 px-4 md:px-0 text-white">{{ title }}</h1>
        <h2 class="text-center text-2xl md:text-left md:text-3xl lg:text-5xl xb:text-6xl leading-tight tracking-tight px-6 md:px-0 text-white">
          {% if subtitle %}
            {{ subtitle }}
          {% else %}
            &nbsp;
          {% endif %}
        </h2>
        <p class="font-sans hidden not-italic md:block md:text-2xl tracking-tight md:text-base md:mt-8 mb-6 text-white">{{ description }}</p>
        <p class="font-sans text-base text-center px-4 md:text-right md:px-0 mt-4 md:mt-0 mb-0 text-white">
          <span style="font-variant: small-caps">published:</span>&nbsp; <strong>{{ page.date | htmlDateString }}</strong><br />
          <span class="text-sm">
          {% if lastmod %}
          <span style="font-variant: small-caps">last modified:</span>&nbsp; {{ lastmod | htmlDateString }}
          {% else %}
          &nbsp;
          {% endif %}
          </span>
        </p>
        {% if featured_image_caption %}
          <p class="font-sans text-center text-white text-xs mt-4 mb-0 md:mb-1 pb-1">{{ featured_image_caption | safe }}</p>
        {% endif %}
      </div>
    </div>
  </div>

  <div class="sm:w-5/6 md:w-4/5 xl:w-1/2 mt-10 mr-auto ml-auto px-6 lg:px-16">
    <article class="article">
      {{ content | safe }}
    </article>
  </div>

  {% if title != "The obligatory About Me page" %}

  {% include 'layouts/partials/fastcomments.njk' %}

  <div class="w-full px-8 md:px-0 bg-blue-700 align-middle mt-10 mb-10">
    <h3 class="text-center text-3xl tracking-normal mb-0 pt-2"><a href="/posts" class="border-transparent text-blue-100 hover:text-white italic">Other posts</a></h3>
  {% if nextPost.url %}
    <p class="font-sans text-center mt-2 mb-2 text-xl text-white leading-tight tracking-tight">
      <strong>Next</strong>: 
      <a class="border-transparent text-blue-100 hover:text-white hover:border-blue-100" href="{{ nextPost.url }}">{{ nextPost.data.title }}</a>
    </p>
  {% endif %}
  {% if prevPost.url %}
    <p class="font-sans text-center pb-4 my-0 text-xl text-white leading-tight tracking-tight">
      <strong>Previous</strong>: 
      <a class="border-transparent text-blue-100 hover:text-white hover:border-blue-100" href="{{ prevPost.url }}">{{ prevPost.data.title }}</a>
    </p>
  {% endif %}
  </div>
  {% endif %}
