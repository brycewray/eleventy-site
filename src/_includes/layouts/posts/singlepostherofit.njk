---
title: singlepostherolqip.njk
layout: layouts/_default/baseof.njk
---

<main>
  <div class="container w-full min-w-full relative overflow-hidden height-post">
    <picture>
      <source srcset="/images/{{featured_image_base}}-300.{{featured_image_ext}} 300w, /images/{{featured_image_base}}-600.{{featured_image_ext}} 600w, /images/{{featured_image_base}}-{{featured_image_width}}.{{featured_image_ext}} {{featured_image_width}}w" class="object-cover" />
      <img src="/images/{{featured_image_base}}-{{featured_image_width}}.{{featured_image_ext}}" alt="{{featured_image_alt}}" class="object-cover" />
    </picture>
    <div class="absolute bottom-0 text-shadow-titles sm:px-20 md:px-30 lg:px-40 pt-6 gradient-titles w-full min-w-full">
      <h1 class="text-center text-4x1 md:text-left md:text-5xl text-gray-200">{{ title }}</h1>
      <h2 class="text-center italic text-2x1 md:text-left md:text-3xl text-gray-200">
        {% if subtitle %}
          {{ subtitle }}
        {% else %}
          &nbsp;
        {% endif %}
      </h2>
      <p class="h4 hidden not-italic md:block md:mt-4 text-gray-200">{{ description }}</p>
      <p class="text-base text-center md:text-right text-gray-200">
        <span style="font-variant: small-caps">published:</span>&nbsp; <strong>{{ page.date | htmlDateString }}</strong><br />
        <span class="text-sm">
        {% if lastmod %}
        <span style="font-variant: small-caps">last modified:</span>&nbsp; {{ lastmod | htmlDateString }}
        {% else %}
        &nbsp;
        {% endif %}
        </span>
      </p>
    </div>
  </div>
  {% if featured_image_caption %}
    <p class="text-xs text-center tracking-normal">{{ featured_image_caption }}</p>
  {% endif %}

  <div class="sm:w-5/6 md:w-2/3 lg:w-1/2 mt-10 mr-auto ml-auto px-8">
    <article>
      {{ content | safe }}
    </article>
  </div>

  {% if title != "Home page" and title != "Posts" %}
  {% if oldComments %}
  {% include 'comments/' + (discussionId) + '.njk' %}
  {% endif %}
  {% include 'webmentionlist.njk' %}
  {% endif %}

  {% if title != "The obligatory About Me page" %}
  <div class="w-full bg-blue-deep align-middle mb-10">
    <h3 class="text-center text-2xl mb-0"><a href="/posts" class="border-transparent text-blue-300 hover:text-white italic">Other posts</a></h3>
  {% if nextPost.url %}
    <p class="text-center mt-0 mb-0 text-gray-200">
      <strong>Next</strong>: 
      <a class="border-transparent text-blue-300 hover:text-white" href="{{ nextPost.url }}">{{ nextPost.data.title }}</a>
    </p>
  {% endif %}
  {% if prevPost.url %}
    <p class="text-center text-gray-200">
      <strong>Previous</strong>: 
      <a class="border-transparent text-blue-300 hover:text-white" href="{{ prevPost.url }}">{{ prevPost.data.title }}</a>
    </p>
  {% endif %}
  </div>
  {% endif %}
